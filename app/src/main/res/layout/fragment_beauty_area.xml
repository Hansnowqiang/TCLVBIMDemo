<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:id="@+id/layoutFaceBeauty"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:layout_gravity="bottom">

        <SeekBar
            android:id="@+id/beauty_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/play_seekbar_icon"
            android:progressDrawable="@drawable/beauty_seekbar_progress"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:maxHeight="1.0dp"
            android:minHeight="1.0dp"
            android:visibility="visible"
            android:indeterminate="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray3"
        android:layout_height="0.1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_face_beauty"
            android:text="美颜"
            android:drawableLeft="@drawable/drawable_face_beauty"
            android:textColor="@drawable/text_accent_gray_color"
            android:drawablePadding="0dp"
            android:paddingTop="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingBottom="15dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_face_whitening"
            android:text="美白"
            android:drawableLeft="@drawable/drawable_face_whitening"
            android:textColor="@drawable/text_accent_gray_color"
            android:drawablePadding="0dp"
            android:paddingTop="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingBottom="15dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"  />

        <!--<TextView-->
            <!--android:text="动效"-->
            <!--android:drawableLeft="@drawable/white"-->
            <!--android:drawablePadding="0dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="0dp"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingLeft="45dp"-->
            <!--android:paddingRight="20dp"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:layout_height="wrap_content"  />-->

    </LinearLayout>

</LinearLayout>